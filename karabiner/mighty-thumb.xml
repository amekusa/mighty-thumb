<?xml version="1.0"?>
<root>
  <item>
    <name>Mighty Thumb</name>
    <item>
      <name>Turn your thumb key into an extra modifier key.</name>
    </item>
    <appdef>
      <appname>Atom</appname>
      <equal>com.github.atom</equal>
    </appdef>
    <appdef>
      <appname>Blender</appname>
      <equal>org.blenderfoundation.blender</equal>
    </appdef>
    <appdef>
      <appname>Eclipse</appname>
      <equal>org.eclipse.eclipse</equal>
      <equal>org.eclipse.platform.ide</equal>
      <equal>org.eclipse.sdk.ide</equal>
      <equal>com.springsource.sts</equal>
      <equal>org.springsource.sts.ide</equal>
    </appdef>
    <item>
      <name>Thumb + E/S/D/F = Up/Left/Down/Right</name>
      <identifier>remap.amekusa.mightythumb.cursor</identifier>
      <autogen>__KeyOverlaidModifier__ KeyCode::JIS_EISUU, KeyCode::VK_MODIFIER_EXTRA1, KeyCode::JIS_EISUU</autogen>
      <autogen>__KeyToKey__ KeyCode::E, ModifierFlag::EXTRA1, KeyCode::CURSOR_UP</autogen>
      <autogen>__KeyToKey__ KeyCode::S, ModifierFlag::EXTRA1, KeyCode::CURSOR_LEFT</autogen>
      <autogen>__KeyToKey__ KeyCode::D, ModifierFlag::EXTRA1, KeyCode::CURSOR_DOWN</autogen>
      <autogen>__KeyToKey__ KeyCode::F, ModifierFlag::EXTRA1, KeyCode::CURSOR_RIGHT</autogen>
    </item>
    <item>
      <name>Thumb + O/U = Tab/Shift+Tab</name>
      <identifier>remap.amekusa.mightythumb.tab</identifier>
      <autogen>__KeyOverlaidModifier__ KeyCode::JIS_EISUU, KeyCode::VK_MODIFIER_EXTRA1, KeyCode::JIS_EISUU</autogen>
      <autogen>__KeyToKey__ KeyCode::U, ModifierFlag::EXTRA1, KeyCode::TAB, ModifierFlag::SHIFT_L</autogen>
      <autogen>__KeyToKey__ KeyCode::O, ModifierFlag::EXTRA1, KeyCode::TAB</autogen>
    </item>
    <item>
      <name>Thumb + W/R = Page Up/Down</name>
      <identifier>remap.amekusa.mightythumb.view.page</identifier>
      <autogen>__KeyOverlaidModifier__ KeyCode::JIS_EISUU, KeyCode::VK_MODIFIER_EXTRA1, KeyCode::JIS_EISUU</autogen>
      <autogen>__KeyToKey__ KeyCode::W, ModifierFlag::EXTRA1, KeyCode::CURSOR_UP, ModifierFlag::FN</autogen>
      <autogen>__KeyToKey__ KeyCode::R, ModifierFlag::EXTRA1, KeyCode::CURSOR_DOWN, ModifierFlag::FN</autogen>
    </item>
    <item>
      <name>Thumb + C/X/V/Z = Copy/Cut/Paste/Undo</name>
      <identifier>remap.amekusa.mightythumb.edit</identifier>
      <autogen>__KeyOverlaidModifier__ KeyCode::JIS_EISUU, KeyCode::VK_MODIFIER_EXTRA1, KeyCode::JIS_EISUU</autogen>
      <autogen>__KeyToKey__ KeyCode::C, ModifierFlag::EXTRA1, KeyCode::C, ModifierFlag::COMMAND_L</autogen>
      <autogen>__KeyToKey__ KeyCode::X, ModifierFlag::EXTRA1, KeyCode::X, ModifierFlag::COMMAND_L</autogen>
      <autogen>__KeyToKey__ KeyCode::V, ModifierFlag::EXTRA1, KeyCode::V, ModifierFlag::COMMAND_L</autogen>
      <autogen>__KeyToKey__ KeyCode::Z, ModifierFlag::EXTRA1, KeyCode::Z, ModifierFlag::COMMAND_L</autogen>
    </item>
    <item>
      <name>Thumb + A/G = Previous/Next Word</name>
      <identifier>remap.amekusa.mightythumb.edit.cursor.word</identifier>
      <autogen>__KeyOverlaidModifier__ KeyCode::JIS_EISUU, KeyCode::VK_MODIFIER_EXTRA1, KeyCode::JIS_EISUU</autogen>
      <autogen>__KeyToKey__ KeyCode::A, ModifierFlag::EXTRA1, KeyCode::CURSOR_LEFT, ModifierFlag::OPTION_L</autogen>
      <autogen>__KeyToKey__ KeyCode::G, ModifierFlag::EXTRA1, KeyCode::CURSOR_RIGHT, ModifierFlag::OPTION_L</autogen>
    </item>
    <item>
      <name>Thumb + Q/T = Beginning/End of Line</name>
      <identifier>remap.amekusa.mightythumb.edit.cursor.line</identifier>
      <autogen>__KeyOverlaidModifier__ KeyCode::JIS_EISUU, KeyCode::VK_MODIFIER_EXTRA1, KeyCode::JIS_EISUU</autogen>
      <autogen>__KeyToKey__ KeyCode::Q, ModifierFlag::EXTRA1, KeyCode::CURSOR_LEFT, ModifierFlag::COMMAND_L</autogen>
      <autogen>__KeyToKey__ KeyCode::T, ModifierFlag::EXTRA1, KeyCode::CURSOR_RIGHT, ModifierFlag::COMMAND_L</autogen>
    </item>
    <item>
      <name>Thumb + U/H/K/L = Shift + Up/Left/Down/Right</name>
      <identifier>remap.amekusa.mightythumb.edit.select</identifier>
      <autogen>__KeyOverlaidModifier__ KeyCode::JIS_EISUU, KeyCode::VK_MODIFIER_EXTRA1, KeyCode::JIS_EISUU</autogen>
      <autogen>__KeyToKey__ KeyCode::I, ModifierFlag::EXTRA1, KeyCode::CURSOR_UP, ModifierFlag::SHIFT_L</autogen>
      <autogen>__KeyToKey__ KeyCode::J, ModifierFlag::EXTRA1, KeyCode::CURSOR_LEFT, ModifierFlag::SHIFT_L</autogen>
      <autogen>__KeyToKey__ KeyCode::K, ModifierFlag::EXTRA1, KeyCode::CURSOR_DOWN, ModifierFlag::SHIFT_L</autogen>
      <autogen>__KeyToKey__ KeyCode::L, ModifierFlag::EXTRA1, KeyCode::CURSOR_RIGHT, ModifierFlag::SHIFT_L</autogen>
    </item>
    <item>
      <name>Thumb + H/N = Backward/Forward Delete</name>
      <identifier>remap.amekusa.mightythumb.edit.delete</identifier>
      <autogen>__KeyOverlaidModifier__ KeyCode::JIS_EISUU, KeyCode::VK_MODIFIER_EXTRA1, KeyCode::JIS_EISUU</autogen>
      <autogen>__KeyToKey__ KeyCode::H, ModifierFlag::EXTRA1, KeyCode::DELETE</autogen>
      <autogen>__KeyToKey__ KeyCode::N, ModifierFlag::EXTRA1, KeyCode::DELETE, ModifierFlag::FN</autogen>
    </item>
    <item>
      <name>Complex Operations</name>
      <item>
        <name>Only works on Atom, Eclipse.</name>
      </item>
      <item>
        <name>Thumb + M = Delete Line</name>
        <identifier>remap.amekusa.mightythumb.edit.delete.line</identifier>
        <autogen>__KeyOverlaidModifier__ KeyCode::JIS_EISUU, KeyCode::VK_MODIFIER_EXTRA1, KeyCode::JIS_EISUU</autogen>
        <block>
          <only>Atom</only>
          <autogen>__KeyToKey__ KeyCode::M, ModifierFlag::EXTRA1, KeyCode::K, ModifierFlag::SHIFT_L | ModifierFlag::CONTROL_L</autogen>
        </block>
        <block>
          <only>Eclipse</only>
          <autogen>__KeyToKey__ KeyCode::M, ModifierFlag::EXTRA1, KeyCode::D, ModifierFlag::COMMAND_L</autogen>
        </block>
      </item>
      <item>
        <name>Thumb + &lt;/&gt; = Move Line Up/Down</name>
        <identifier>remap.amekusa.mightythumb.edit.move.line</identifier>
        <autogen>__KeyOverlaidModifier__ KeyCode::JIS_EISUU, KeyCode::VK_MODIFIER_EXTRA1, KeyCode::JIS_EISUU</autogen>
        <block>
          <only>Atom</only>
          <autogen>__KeyToKey__ KeyCode::COMMA, ModifierFlag::EXTRA1, KeyCode::CURSOR_UP, ModifierFlag::COMMAND_L | ModifierFlag::CONTROL_L</autogen>
          <autogen>__KeyToKey__ KeyCode::DOT, ModifierFlag::EXTRA1, KeyCode::CURSOR_DOWN, ModifierFlag::COMMAND_L | ModifierFlag::CONTROL_L</autogen>
        </block>
        <block>
          <only>Eclipse</only>
          <autogen>__KeyToKey__ KeyCode::COMMA, ModifierFlag::EXTRA1, KeyCode::CURSOR_UP, ModifierFlag::OPTION_L</autogen>
          <autogen>__KeyToKey__ KeyCode::DOT, ModifierFlag::EXTRA1, KeyCode::CURSOR_DOWN, ModifierFlag::OPTION_L</autogen>
        </block>
      </item>
      <item>
        <name>Thumb + Return = New Line Below</name>
        <identifier>remap.amekusa.mightythumb.edit.newline</identifier>
        <autogen>__KeyOverlaidModifier__ KeyCode::JIS_EISUU, KeyCode::VK_MODIFIER_EXTRA1, KeyCode::JIS_EISUU</autogen>
        <block>
          <only>Atom</only>
          <autogen>__KeyToKey__ KeyCode::RETURN, ModifierFlag::EXTRA1, KeyCode::RETURN, ModifierFlag::COMMAND_L</autogen>
        </block>
        <block>
          <only>Eclipse</only>
          <autogen>__KeyToKey__ KeyCode::RETURN, ModifierFlag::EXTRA1, KeyCode::RETURN, ModifierFlag::SHIFT_L</autogen>
        </block>
      </item>
    </item>
    <item>
      <name>ThumbSense Combination</name>
      <item>
        <name>Karabiner multi-touch extension must be enabled.</name>
        <identifier>notsave.mightythumbsense</identifier>
      </item>
      <item>
        <config_only>notsave.mightythumbsense</config_only>
        <name>Touch + J = Left Mouse Button</name>
        <identifier>remap.amekusa.mightythumb.touch.mouse.button.l</identifier>
        <autogen>__KeyToKey__ KeyCode::J, PointingButton::LEFT</autogen>
      </item>
      <item>
        <config_only>notsave.mightythumbsense</config_only>
        <name>Touch + K = Right Mouse Button</name>
        <identifier>remap.amekusa.mightythumb.touch.mouse.button.r</identifier>
        <autogen>__KeyToKey__ KeyCode::K, PointingButton::RIGHT</autogen>
      </item>
      <item>
        <config_only>notsave.mightythumbsense</config_only>
        <name>Touch + L = Mouse Wheel Button</name>
        <identifier>remap.amekusa.mightythumb.touch.mouse.button.wheel</identifier>
        <autogen>__KeyToKey__ KeyCode::L, PointingButton::MIDDLE</autogen>
      </item>
      <item>
        <config_only>notsave.mightythumbsense</config_only>
        <name>Touch + M/I = Close/New Window</name>
        <identifier>remap.amekusa.mightythumb.touch.window</identifier>
        <autogen>__KeyToKey__ KeyCode::M, KeyCode::W, ModifierFlag::COMMAND_L</autogen>
        <autogen>__KeyToKey__ KeyCode::I, KeyCode::T, ModifierFlag::COMMAND_L</autogen>
      </item>
      <item>
        <config_only>notsave.mightythumbsense</config_only>
        <name>Touch + U/O = Previous/Next Window</name>
        <identifier>remap.amekusa.mightythumb.touch.window.switch</identifier>
        <block>
          <not>Eclipse</not>
          <autogen>__KeyToKey__ KeyCode::U, KeyCode::TAB, ModifierFlag::CONTROL_L | ModifierFlag::SHIFT_L</autogen>
          <autogen>__KeyToKey__ KeyCode::O, KeyCode::TAB, ModifierFlag::CONTROL_L</autogen>
          <autogen>__KeyToKey__ KeyCode::N, KeyCode::VK_MOUSEKEY_BUTTON_MIDDLE</autogen>
        </block>
        <block>
          <only>Eclipse</only>
          <autogen>__KeyToKey__ KeyCode::U, KeyCode::PAGEUP, ModifierFlag::CONTROL_L</autogen>
          <autogen>__KeyToKey__ KeyCode::O, KeyCode::PAGEDOWN, ModifierFlag::CONTROL_L</autogen>
        </block>
      </item>
    </item>
  </item>
</root>
